<div class="row">
    <div class="signupform col col-12 col-md-10 col-lg-8">
        <div class="card text-white bg-primary mb-3" style="max-width: 60rem;">
            <div class="card-header">Sign Up</div>
            <div class="card-body">
                <br>
                <% include ./partials/messages %>
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <label for="newusername">Name</label>
                        <input type="text"
                        name="newusername"
                        class="form-control"
                        id="newusername"
                        placeholder="Enter Name"
                        value="<%- typeof name != 'undefined' ? name : '' %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="newuseremail">Email Address</label>
                        <input
                        type="email"
                        name="newuseremail"
                        class="form-control"
                        id="newuseremail"
                        aria-describedby="emailHelp"
                        placeholder="Enter Email">
                      </div>

                      <div class="form-group">
                        <label for="newuserpass">Password</label>
                        <input
                        name="newuserpass"
                        type="password"
                        class="form-control"
                        id="newuserpass"
                        placeholder="Create Password">
                      </div>

                      <div class="form-group">
                        <label for="confirmuserpass">Confirm Password</label>
                        <input
                        name="confirmuserpass"
                        type="password"
                        class="form-control"
                        id="confirmuserpass"
                        placeholder="Retype Password">
                      </div>

                      <div class="form-group">
                          <button type="submit" class="btn btn-primary">Register</button>
                    </div>

                    <br>
                    <p>Already have an account? <a href="/users/login">Log In</a></p>
                </form>
                    
            </div>
        </div>
    </div>
</div>