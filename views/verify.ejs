<div class="row">
    <div class="loginform col col-12 col-md-10 col-lg-8">
        <div class="card text-white bg-primary mb-3" style="max-width: 50rem;">
            <div class="card-header">Verify Email</div>
            <div class="card-body">
                <br>
                <% include ./partials/messages %>
                <form action="/users/verify" method="POST">
                    <div class="form-group">
                        <label for="secretToken">Secret Token</label>
                        <input type="text"  
                        name="secretToken"
                        class="form-control"
                        id="secretToken"
                        placeholder="Enter Secret Token">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
    
               </form>
            
                    
            </div>
        </div>
    </div>
</div>